{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "rootDir": "./src/server",
        "declaration": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/components",
        "src/types"
    ]
}